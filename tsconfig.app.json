{
    "compilerOptions": {
      "baseUrl": "./src/",
      "target": "ESNext",
      "useDefineForClassFields": true,
      "module": "ESNext",
      "moduleResolution": "Node",
      "strict": true,
      "jsx": "preserve",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "lib": ["ESNext", "DOM"],
      "skipLibCheck": true,
      "noEmit": true,
      "types": ["vitest/importMeta"],
      "paths": {
        "@/*": ["*"],
      }
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.d.ts",
      "src/**/*.tsx",
      "src/**/*.vue",
      "src/**/*.json",
      "vite.config.*",
      "auto-imports.d.ts"
    ],
    "exclude": ["src/**/__tests__/*", "**/*.stories.ts"]
  }

